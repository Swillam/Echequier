import java.util.Scanner;

  public void demandeJoueur() {
    Scanner sc = new Scanner(System.in);
    System.out.println("Quel est la position de la piece à jouer ?");
    String str = sc.nextLine();
    char pc = str.charAt(0);
    int pl = Character.getNumericValue(str.charAt(1));
    System.out.println(pc);

    Scanner scd = new Scanner(System.in);
    System.out.println("Ou voulez-vous déplacer la pièce ?");
    String strd = scd.nextLine();
    char pcd = strd.charAt(0);
    int pld = Character.getNumericValue(strd.charAt(1));
    System.out.println(pcd);

  }
  
